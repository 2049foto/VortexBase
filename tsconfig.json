{
  "compilerOptions": {
    // Language & Environment
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",

    // Strict Type Checking (Enterprise-Grade)
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,

    // Additional Strict Checks
    "noUnusedLocals": false, // Temporarily disabled for build
    "noUnusedParameters": false, // Temporarily disabled for build
    "exactOptionalPropertyTypes": false, // Temporarily disabled - causes too many errors
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false, // Temporarily disabled for build
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false, // Temporarily disabled - causes env access errors
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,

    // Module Resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,

    // Emit
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "incremental": true,

    // Interop
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Next.js Plugin
    "plugins": [
      {
        "name": "next"
      }
    ],

    // Path Aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/types/*": ["./src/types/*"],
      "@/services/*": ["./src/services/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/test/*": ["./src/test/*"]
    },

    // Type Roots
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "drizzle",
    "coverage",
    "playwright-report"
  ]
}
