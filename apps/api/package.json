{
  "name": "vortex-api",
  "version": "1.0.0",
  "description": "Vortex Protocol API - Bun + Elysia | Base Chain | Dust Consolidation",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --env-file=../../.env.local --watch src/index.ts",
    "start": "bun --env-file=../../.env.local src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seeds.ts",
    "typecheck": "bunx tsc --noEmit",
    "lint": "bunx tsc --noEmit",
    "test": "bun test",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.1.2",
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/jwt": "^1.1.1",
    "@neondatabase/serverless": "^0.10.4",
    "@resvg/resvg-js": "^2.6.2",
    "@sentry/bun": "^10.32.1",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.34.3",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.1.25",
    "jose": "^5.9.6",
    "nanoid": "^5.0.9",
    "permissionless": "^0.3.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "satori": "^0.18.3",
    "viem": "^2.21.54",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "bun-types": "^1.1.34",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "pg": "^8.16.3",
    "typescript": "^5.7.2"
  }
}
