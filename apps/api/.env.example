# ========================================
# VORTEX API - Environment Variables
# ========================================
# Copy this file to .env and fill in the values
# ========================================

# Node Environment
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/vortex?sslmode=require

# Cache (Upstash Redis)
REDIS_URL=https://user:password@xxx.upstash.io

# RPC Providers
ALCHEMY_API_KEY=your-alchemy-api-key
QUICKNODE_API_KEY=your-quicknode-api-key
ANKR_API_KEY=your-ankr-api-key

# Portfolio Data
MORALIS_API_KEY=your-moralis-api-key

# Price Feeds
COINGECKO_API_KEY=your-coingecko-api-key

# Risk Scoring APIs
GOPLUS_API_KEY=your-goplus-api-key
HONEYPOT_API_KEY=your-honeypot-api-key
DEXSCREENER_API_KEY=your-dexscreener-api-key

# Account Abstraction
PIMLICO_API_KEY=your-pimlico-api-key

# DEX Aggregator
ONEINCH_API_KEY=your-1inch-api-key

# Authentication
JWT_SECRET=your-super-secret-key-min-32-chars-long
WALLET_NONCE_TTL=300

# Monitoring
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# CORS
FRONTEND_URL=https://vortex.vercel.app
